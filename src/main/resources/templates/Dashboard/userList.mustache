{{> header}}
  <h1>Usuarios registrados</h1>
  <form id="delete" action="/user/delete" method="post">
    <div class="style-scope">
      <label for="delete"> Borrar un usuario: </label>
      <input name="id" type="text" placeholder="ID del usuario a elminar" id="id" class="style-scope">
      <button class="style-scope"> Eliminar usuario </button>
    </div>
  </form>
  <div>
    <table class="table table-dark">
      <thead>
        <tr class="table-primary">
            <th scope="col">id</th>
            <th scope="col">Nombre usuario</th>
            <th scope="col">Email</th>
            <th scope="col">Tipo usuario</th>
          </tr>
        </thead>
      <tbody>
        {{#usuarios}}
          <tbody>
            <tr>
              <td>{{id}}</td>
              <td>{{name}}</td>
              <td>{{email}}</td>
              <td>{{type}}</td>
            </tr>
          </tbody>
        {{/usuarios}}
      </tbody>
    </table>
  </div>
{{> footer}}
